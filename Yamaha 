  <div id="cart">
    <h2>Your Cart (<span id="cart-count">0</span> items)</h2>
    <div id="cart-items"><p>Your cart is empty.</p></div>
    <button id="order-btn" onclick="orderViaWhatsApp()">Order via WhatsApp</button>
  </div>
  <script>
    // Same JS as bajaj.html
    const cartKey = 'borhanAutoCart';
    function loadCart() { const cart = localStorage.getItem(cartKey); return cart ? JSON.parse(cart) : []; }
    function saveCart(cart) { localStorage.setItem(cartKey, JSON.stringify(cart)); }
    function updateCartCount() { const cart = loadCart(); const count = cart.reduce((sum, item) => sum + item.qty, 0); const cartCountElem = document.getElementById('cart-count'); if (cartCountElem) cartCountElem.textContent = count; }
    function addToCart(id, name, price) { let cart = loadCart(); const existing = cart.find(item => item.id === id); if (existing) existing.qty++; else cart.push({ id, name, price, qty: 1 }); saveCart(cart); alert(`Added ${name} to cart.`); updateCartCount(); renderCart(); }
    function removeFromCart(id) { let cart = loadCart(); cart = cart.filter(item => item.id !== id); saveCart(cart); updateCartCount(); renderCart(); }
    function renderCart() { const cart = loadCart(); const cartContainer = document.getElementById('cart-items'); if (!cartContainer) return; if (cart.length === 0) { cartContainer.innerHTML = '<p>Your cart is empty.</p>'; return; } let html = '<ul>'; cart.forEach(item => { html += `<li>${item.name} x ${item.qty} = ৳${item.price * item.qty} <button class="remove-item" onclick="removeFromCart('${item.id}')">Remove</button></li>`; }); html += '</ul>'; cartContainer.innerHTML = html; }
    function orderViaWhatsApp() { const cart = loadCart(); if (cart.length === 0) { alert('Your cart is empty.'); return; } const phone = '8801707659954'; let message = `Hello, I want to order these products from Borhan Auto Parts Centre:\n\n`; cart.forEach(item => { message += `- ${item.name} x ${item.qty} = ৳${item.price * item.qty}\n`; }); message += `\nPlease contact me for further details.`; const url = `https://wa.me/${phone}?text=` + encodeURIComponent(message); window.open(url, '_blank'); }
    document.addEventListener('DOMContentLoaded', () => { updateCartCount(); renderCart(); });
  </script>
</body>
